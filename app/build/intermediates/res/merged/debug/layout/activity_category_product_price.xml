<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6aa061"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_price_pack_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif"
            android:padding="5dp"
            android:text="Available quantities for"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_price_pack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_price_pack_header"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif"
            android:padding="5dp"
            android:text="Tomato - fresh"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:textStyle="bold" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_price_pack">

            <ListView

                android:id="@+id/category_product_price_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/toolbar"
                android:layout_margin="2dp"
                android:divider="@color/colorPrimary"
                android:dividerHeight="1dp"
                android:horizontalSpacing="2dp"
                android:numColumns="2"
                android:scrollbars="none"
                android:saveEnabled="true"
                android:listSelector="@drawable/list_item_selector"
                android:verticalSpacing="2dp">

            </ListView>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>